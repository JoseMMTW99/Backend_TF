<main class="container">
    <a href="/api/sessions/logout" class="btn btn-outline-danger w-25">Logout</a>
    <div class="text-center">
        <h1>Sección Productos</h1>
        {{#each products}}
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">{{ this.name }}</h5>
                    <p class="card-text">Descripción: {{ this.description }}</p>
                    <p class="card-text">Precio: {{ this.price }}</p>
                    <p class="card-text">Categoría: {{ this.category }}</p>
                    <p class="card-text">Stock: {{ this.stock }}</p>
                </div>
            </div>
        {{/each}}
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                {{#if hasPrevPage}}
                    <li class="page-item">
                        <a class="page-link" href="/products?numPage={{prevPage}}" aria-label="Anterior">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Anterior</span>
                        </a>
                    </li>
                {{/if}}
                <li class="page-item disabled">
                    <span class="page-link">{{page}}</span>
                </li>
                {{#if hasNextPage}}
                    <li class="page-item">
                        <a class="page-link" href="/products?numPage={{nextPage}}" aria-label="Siguiente">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Siguiente</span>
                        </a>
                    </li>
                {{/if}}
            </ul>
        </nav>
    </div>
<main/>
